<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VismaInvoiceMaker</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="http://cdn.kendostatic.com/2016.3.914/styles/kendo.common.min.css" />
        <link rel="stylesheet" href="http://cdn.kendostatic.com/2016.3.914/styles/kendo.metro.min.css" />
        <link rel="stylesheet" href="http://cdn.kendostatic.com/2016.3.914/styles/kendo.dataviz.min.css" />
        <link rel="stylesheet" href="http://cdn.kendostatic.com/2016.3.914/styles/kendo.dataviz.bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="~/js/gridtabbing.js"></script>
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.6.2/css/font-awesome.min.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="http://cdn.kendostatic.com/2016.3.914/styles/kendo.common.min.css" />
        <link rel="stylesheet" href="http://cdn.kendostatic.com/2016.3.914/styles/kendo.metro.min.css" />
        <link rel="stylesheet" href="http://cdn.kendostatic.com/2016.3.914/styles/kendo.dataviz.min.css" />
        <link rel="stylesheet" href="http://cdn.kendostatic.com/2016.3.914/styles/kendo.dataviz.bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="~/js/gridtabbing.js"></script>
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.6.2/css/font-awesome.min.css" />
    </environment>
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="//kendo.cdn.telerik.com/2016.3.914/js/kendo.all.min.js"></script>
        <script src="//kendo.cdn.telerik.com/2016.3.914/js/kendo.timezones.min.js"></script>
        <script src="//kendo.cdn.telerik.com/2016.3.914/js/kendo.aspnetmvc.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="//kendo.cdn.telerik.com/2016.3.914/js/kendo.all.min.js"></script>
        <script src="//kendo.cdn.telerik.com/2016.3.914/js/kendo.timezones.min.js"></script>
        <script src="//kendo.cdn.telerik.com/2016.3.914/js/kendo.aspnetmvc.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

</head>
<body>
<div class="container body-content" id="mainContent">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="margin-top" style="height: 65px;">
            <div class="left-align">
                <a asp-controller="Home" asp-action="Index"> <img src="~/images/logo.png" class="minus-margin-top"/> </a>
            </div>
            @Html.Partial("_LoginPartial")
        </div>
        <ul id="menu" class="margin-top">
            <li id="InvoicesMenuLink">@Html.ActionLink("My Invoices", "Index", "Invoices")</li>
            <li id="CustomerMenuLink">@Html.ActionLink("Customers", "Index", "Customers")</li>
            <li id="StoreMenuLink">@Html.ActionLink("Stores", "Index", "Stores")</li>
            <li id="ArticleMenuLink">@Html.ActionLink("Supplies", "Index", "Articles")</li>
        </ul>
    }
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; 2017 - Visma Invoice Maker</p>
    </footer>
</div>
 
    @RenderSection("scripts", required: false)
</body>
</html>
