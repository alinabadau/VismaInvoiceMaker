@using System.Threading.Tasks
@using Kendo.Mvc.UI
@model Article
@(Html.Kendo().ComboBoxFor(m => m)
      .DataValueField("ArticleId")
      .DataTextField("Name")
      .Filter(FilterType.Contains)
      .Events(e => e
      .Change("onChangeArticle"))
      .DataSource(ds => ds.Ajax()
          .Read(read => read.Action("GetArticles", "Articles")
          )))